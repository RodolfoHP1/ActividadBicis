extends ../layout

block content 
    h1 Listado de bicicletas
    table.table 
        thead  
            tr 
                th ID
                th Color
                th Modelo
                th Ubicacion
                th 
                th
                th
        tbody 
            each bici in bicis
                tr
                    td=bici.code
                    td=bici.color
                    td=bici.modelo
                    td=bici.ubicacion
                    td 
                        if bici.apartada
                            p Apartada
                        else 
                            form.inline(method='post' action='/bicicletas/' + bici._id+ '/get')
                                input(type='hidden' name='code' value= bici._id)
                                button.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                                    = 'Apartar'
                    td
                        a(href=bici._id+ '/update') Editar
                    td 
                        form.inline(method='post' action='/bicicletas/' + bici._id+ '/delete')
                            input(type='hidden' name='code' value= bici._id)
                            button.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                                = 'Eliminar'
    a(href='/') Home
